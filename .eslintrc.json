{
  "root": true,
  "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": { "ecmaVersion": "latest",
        "sourceType": "module"},
  "plugins": [
      "@typescript-eslint"
  ],
  "env": {
        "browser": true,
        "node": true,
        "es2021": true,
        "jest": true
    },
  "rules": {
      "array-bracket-spacing": [2, "always"],
        "no-const-assign": 2,
        "no-var": "error",
        "indent": [2, 2],
        "quotes": [2, "backtick"],
        "eqeqeq": "error"
      
  },
  "ignorePatterns": ["src/**/*.test.ts", "src/frontend/generated/*"]
}